<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="@android:integer/config_shortAnimTime">
    <fade android:startDelay="0">
        <targets>
            <target android:targetId="@+id/icon" />
        </targets>
    </fade>
    <fade android:startDelay="50">
        <targets>
            <target android:targetId="@+id/play_button" />
        </targets>
    </fade>
    <fade android:startDelay="100">
        <targets>
            <target android:targetId="@+id/new_game_button" />
        </targets>
    </fade>
    <fade android:startDelay="150">
        <targets>
            <target android:targetId="@+id/leaderboards_button" />
        </targets>
    </fade>
    <fade android:startDelay="200">
        <targets>
            <target android:targetId="@+id/exit_button" />
        </targets>
    </fade>
</transitionSet>